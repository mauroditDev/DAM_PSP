package sockets_01;

import java.io.IOException;
import java.net.ServerSocket;

public class Aceptador implements Runnable{
	public ServerSocket servidor;
	
	public Aceptador(ServerSocket s){
		servidor = s;
	}
	
	@Override
	public void run() {
		while(true){
			try {
				servidor.accept();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

}
