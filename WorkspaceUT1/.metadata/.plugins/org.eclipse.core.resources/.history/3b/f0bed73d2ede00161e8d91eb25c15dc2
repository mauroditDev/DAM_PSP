package sockets_01;

	import java.io.*;
import java.net.*;
import java.util.Scanner;

public class Cliente {
	public static void main(String[] args) throws Exception {
		String host = "localhost";
		int nPuerto = 5000;//puerto remoto
		Socket cliente = null;
		System.out.println("Iniciando el cliente....");
		cliente = new Socket (host, nPuerto); //throws IOException & UnkNownHostException
		//creamos flujo de salida al servidor
		DataOutputStream flujoSalida = new DataOutputStream (cliente.getOutputStream());
		DataInputStream flujoEntrada = new DataInputStream (cliente.getInputStream());
		//IOException
		Scanner sc = new Scanner(System.in);
		String msg = "";
		while(!msg.equals("exit")){
			System.out.println("peticion al server?");
			msg = sc.nextLine();
			flujoSalida.writeUTF(msg);
			System.out.println(flujoEntrada.readUTF());
		}
		
		//creamos flujo de entrada al servidor
		 
		//IOException
		//env√≠o datos del servidor
		System.out.println("Desconectando del SERVIDOR....");
		
		
		sc.close();
		flujoEntrada.close();//throws IOException
		flujoSalida.close();//throws IOException
		cliente.close();//throws IOException
	}//	main

}
