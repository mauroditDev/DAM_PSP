package ut2p1;

public class HiloReloj {
	public static void main(String[] args){
		try{
			for (int i = 0; i<100; i++){

				HiloTic tic = new HiloTic();
				HiloTac tac = new HiloTac();
				
				tic.start();
				synchronized(tic){
					try{
					tic.wait();
					}
					catch(Exception e){e.printStackTrace();}
				}
				tic.notify();
				tac.start();
				synchronized(tac){
					tac.wait();
				}
				tac.notify();
				
			}
		}catch(Exception e){
			e.printStackTrace();
		}
	}

}
